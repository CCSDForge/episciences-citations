<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Episciences - Citations{% endblock %}</title>
        <link rel="icon" type="image/svg" href="{{ asset('/img/Episciences_Logo.svg') }}" />
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% include('navbar.html.twig') %}
        {% block body %}
            <div class="flex h-screen">
                <div class="m-auto">
                    <p class="text-2xl">{{ 'Welcome to Episciences citation manager'|trans }}</p>
                </div>
            </div>
        {% endblock %}
    </body>
</html>
